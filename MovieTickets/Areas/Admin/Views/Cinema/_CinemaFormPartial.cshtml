@model MovieTickets.Areas.Admin.ViewModels.CinemaVM

<div class="mb-3">
    <label asp-for="Name" class="form-label fw-bold"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label fw-bold"></label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Address" class="form-label fw-bold"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="LogoFile" class="form-label fw-bold"></label>
    <input asp-for="LogoFile" type="file" class="form-control" />
    <span asp-validation-for="LogoFile" class="text-danger"></span>
</div>

@if (!string.IsNullOrEmpty(Model.CinemaLogo))
{
    <div class="mb-3">
        <p>Current Logo:</p>
        <img src="@Model.CinemaLogo" alt="Cinema Logo" class="img-thumbnail" style="max-height:120px;" />
    </div>
}
