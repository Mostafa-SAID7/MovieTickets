@model MovieTickets.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Actor</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this actor?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Stage Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Bio</dt>
        <dd class="col-sm-10">@Model.Bio</dd>

        <dt class="col-sm-2">Profile Picture</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <img src="@Model.ProfilePicture" alt="profile" class="img-thumbnail" style="max-height:100px;" />
            }
        </dd>

        <dt class="col-sm-2">News</dt>
        <dd class="col-sm-10">@Model.News</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
