@model MovieTickets.Models.Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<h2>Delete Cinema</h2>
<hr />

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this cinema?</h5>
</div>

<div class="mb-3">
    <strong>@Model.Name</strong><br />
    @if (!string.IsNullOrEmpty(Model.CinemaLogo))
    {
        <img src="@Model.CinemaLogo" class="img-thumbnail" style="max-height:100px;" />
    }
    <p>@Model.Address</p>
    <p>@Model.Description</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
