@model MovieTickets.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<h2>Booking Details</h2>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Movie</dt>
        <dd class="col-sm-10">@Model.Movie?.Title</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.FullName</dd>

        <dt class="col-sm-2">Cinema</dt>
        <dd class="col-sm-10">@Model.Cinema?.Name</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@Model.TotalPrice.ToString("C")</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
