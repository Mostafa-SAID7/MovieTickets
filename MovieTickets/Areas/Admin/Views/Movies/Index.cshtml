@model IEnumerable<MovieTickets.Models.Movie>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Movies";
    var pageNumber = ViewBag.PageNumber as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<h2>Movies</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["ModelStateErrors"] != null)
{
    <pre class="bg-light p-2">@TempData["ModelStateErrors"]</pre>
}

<form class="form-inline mb-3" method="get" asp-action="Index">
    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control mr-2" placeholder="Search title..." />
    <select name="categoryId" class="form-control mr-2">
        <option value="">All categories</option>
        @foreach (var c in ViewBag.Categories as IEnumerable<MovieTickets.Models.Category>)
        {
            if (ViewBag.CurrentCategory != null && (int)ViewBag.CurrentCategory == c.Id)
            {
                <option value="@c.Id" selected="selected">@c.Name</option>
            }
            else
            {
                <option value="@c.Id">@c.Name</option>
            }
        }
    </select>

    <select name="cinemaId" class="form-control mr-2">
        <option value="">All cinemas</option>
        @foreach (var c in ViewBag.Cinemas as IEnumerable<MovieTickets.Models.Cinema>)
        {
            if (ViewBag.CurrentCinema != null && (int)ViewBag.CurrentCinema == c.Id)
            {
                <option value="@c.Id" selected="selected">@c.Name</option>
            }
            else
            {
                <option value="@c.Id">@c.Name</option>
            }
        }
    </select>

    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="Create" class="btn btn-success ml-2">Create New</a>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>MovieStatus</th>
            <th>Category</th>
            <th>Cinema</th>
            <th>Start</th>
            <th>End</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td style="width:100px">
                    @if (!string.IsNullOrEmpty(m.ImgUrl))
                    {
                        <img src="@m.ImgUrl" style="max-height:80px; max-width:80px;" />
                    }
                </td>
                <td>@m.Title</td>
                <td>@m.MovieStatus</td>
                <td>@m.Category?.Name</td>
                <td>@m.Cinema?.Name</td>
                <td>@m.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@(m.EndDate == default ? "-" : m.EndDate.ToString("yyyy-MM-dd"))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@m.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber-1)">Previous</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }
        <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber+1)">Next</a>
        </li>
    </ul>
</nav>
