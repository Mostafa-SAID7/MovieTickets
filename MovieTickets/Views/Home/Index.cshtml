@model IEnumerable<MovieTickets.Models.Movie>

@{
    ViewData["Title"] = "Movies";
    var currentSearch = ViewBag.Search as string;
    var currentCategory = ViewBag.CategoryId as int?;
    var categories = ViewBag.Categories as List<MovieTickets.Models.Category> ?? new List<MovieTickets.Models.Category>();
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="container mt-4">
    <h2 class="mb-4">🎬 Movies</h2>

    <!-- Search + Filter -->
    <form method="get" class="row g-2 mb-3" aria-label="Movie search and filter">
        <div class="col-md-4">
            <input type="text" name="search" class="form-control" placeholder="Search movies..." value="@currentSearch" aria-label="Search movies" />
        </div>

        <div class="col-md-3">
            <select name="categoryId" class="form-select" aria-label="Filter by category">
                <option value="">All categories</option>
                @foreach (var cat in categories)
                {
                    if (cat.Id == currentCategory)
                    {
                        <option value="@cat.Id" selected>@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </form>

    <!-- Movie Cards -->
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(movie.ImgUrl))
                    {
                        <img src="@movie.ImgUrl" class="card-img-top" alt="@movie.Title" style="height:220px;object-fit:cover;" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height:220px;">
                            <span class="text-muted">No image</span>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">
                            @{
                                var desc = movie.Description ?? "";
                                if (desc.Length > 140)
                                {
                                    @($"{desc.Substring(0, 140)}...")
                                }
                                else
                                {
                                    @desc
                                }
                            }
                        </p>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-primary">Details</a>
                            <small class="text-muted">@movie.StartDate.ToString("yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav aria-label="Movie list pages">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage - 1)&search=@currentSearch&categoryId=@currentCategory">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@currentSearch&categoryId=@currentCategory">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage + 1)&search=@currentSearch&categoryId=@currentCategory">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
