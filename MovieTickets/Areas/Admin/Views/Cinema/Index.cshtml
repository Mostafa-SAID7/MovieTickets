@model IEnumerable<MovieTickets.Models.Cinema>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Cinemas</h2>
    <a asp-action="Create" class="btn btn-primary">+ Add New Cinema</a>
</div>

<table class="table table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Address</th>
            <th>Description</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cinema in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(cinema.CinemaLogo))
                    {
                        <img src="@cinema.CinemaLogo" alt="logo" class="img-thumbnail" style="max-height:60px;" />
                    }
                </td>
                <td>@cinema.Name</td>
                <td>@cinema.Address</td>
                <td>@cinema.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@cinema.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
