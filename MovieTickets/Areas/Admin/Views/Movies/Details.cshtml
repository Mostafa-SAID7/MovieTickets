@model MovieTickets.Models.Movie
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Movie Details";
}

<h3>@Model.Title</h3>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <img src="@Model.ImgUrl" class="img-fluid" />
        }
        <dl class="row mt-3">
            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Category?.Name</dd>

            <dt class="col-sm-4">Cinema</dt>
            <dd class="col-sm-8">@Model.Cinema?.Name</dd>

            <dt class="col-sm-4">Start</dt>
            <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">End</dt>
            <dd class="col-sm-8">@((Model.EndDate == default) ? "-" : Model.EndDate.ToString("yyyy-MM-dd"))</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Model.Price.ToString("F2")</dd>
        </dl>
    </div>

    <div class="col-md-8">
        <h5>Description</h5>
        <p>@Model.Description</p>

        <h5>Actors</h5>
        <ul>
            @if (Model.MovieActors != null && Model.MovieActors.Any())
            {
                foreach (var ma in Model.MovieActors)
                {
                    <li>@($"{ma.Actor?.FirstName} {ma.Actor?.LastName}")</li>
                }
            }
            else
            {
                <li>No actors assigned</li>
            }
        </ul>


        <h5>Images</h5>
        <div>
            @if (Model.MovieImgs != null && Model.MovieImgs.Any())
            {
                foreach (var mi in Model.MovieImgs)
                {
                    <img src="@mi.ImgUrl" style="max-height:120px; margin-right:8px; margin-bottom:8px;" />
                }
            }
            else
            {

                <p>No additional images</p>
            }
        </div>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
