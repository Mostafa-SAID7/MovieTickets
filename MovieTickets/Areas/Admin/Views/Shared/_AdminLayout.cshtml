@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Dashboard";
    var userName = User?.Identity?.Name ?? "Admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Admin/Home">MovieTickets Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-area="Admin" asp-controller="Movies" asp-action="Index">Movies</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Cinema" asp-action="Index">Cinemas</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Booking" asp-action="Index">Booking</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Showtime" asp-action="Index">Showtimes</a></li>
                </ul>

                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">@userName</span>
                    <a class="btn btn-outline-light btn-sm" href="/">Front</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <aside class="col-lg-2 d-none d-lg-block">
                <div class="card">
                    <div class="card-body p-2">
                        <ul class="list-unstyled mb-0">
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link active" asp-area="Admin" asp-controller="Movies" asp-action="Index">Movies</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Cinema" asp-action="Index">Cinemas</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Booking" asp-action="Index">Booking</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Showtime" asp-action="Index">Showtimes</a></li>

                        </ul>
                    </div>
                </div>
            </aside>

            <main class="col-lg-10">
                <div class="mb-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="text-center py-3 mt-4">
        <small class="text-muted">&copy; @DateTime.Now.Year MovieTickets</small>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
