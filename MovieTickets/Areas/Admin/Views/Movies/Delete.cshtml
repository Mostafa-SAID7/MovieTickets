@model MovieTickets.Models.Movie
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Movie";
}

<h3>Delete Movie</h3>

<div class="alert alert-warning">
    Are you sure you want to delete the movie "<strong>@Model.Title</strong>"?
</div>

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>
    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@Model.Category?.Name</dd>
    <dt class="col-sm-3">Cinema</dt>
    <dd class="col-sm-9">@Model.Cinema?.Name</dd>
</dl>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
