@model MovieTickets.Models.Movie
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Movie Details";
}

<h2>Movie Details</h2>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <img src="@Model.ImgUrl" class="img-fluid rounded" />
        }
    </div>
    <div class="col-md-8">
        <h3>@Model.Title</h3>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Cinema:</strong> @Model.Cinema?.Name</p>
        <p><strong>Start:</strong> @Model.StartDate.ToString("yyyy-MM-dd")</p>
        <p><strong>End:</strong> @(Model.EndDate == default(DateTime) ? "-" : Model.EndDate.ToString("yyyy-MM-dd"))</p>
        <p>@Model.Description</p>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
