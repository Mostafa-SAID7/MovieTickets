@model IEnumerable<MovieTickets.Models.Movie>
@{
    ViewData["Title"] = "Movies - Admin";
    var currentFilter = ViewBag.CurrentFilter as string;
    var currentCategory = ViewBag.CurrentCategory as int?;
    var categories = ViewBag.Categories as List<MovieTickets.Models.Category>;
    var cinemas = ViewBag.Cinemas as List<MovieTickets.Models.Cinema>;
    int pageNumber = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>🎬 Movies (Admin)</h2>
    <div>
        <a asp-action="Create" class="btn btn-success">+ Create Movie</a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="searchString" value="@currentFilter" placeholder="Search by title" class="form-control" />
        </div>
        <div class="col-md-3">
            <select name="categoryId" class="form-select">
                <option value="">All Categories</option>
                @foreach (var c in categories)
                {
                    if (c.Id == currentCategory)
                    {
                        <option value="@c.Id" selected>@c.Name</option>
                    }
                    else
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <select name="cinemaId" class="form-select">
                <option value="">All Cinemas</option>
                @foreach (var c in cinemas)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th style="width:70px">Poster</th>
            <th>Title</th>
            <th>Category</th>
            <th>Cinema</th>
            <th>Start</th>
            <th>Price</th>
            <th style="width:160px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(movie.ImgUrl))
                    {
                        <img src="@movie.ImgUrl" alt="poster" style="width:64px;height:64px;object-fit:cover;border-radius:4px" />
                    }
                </td>
                <td>@movie.Title</td>
                <td>@movie.Category?.Name</td>
                <td>@movie.Cinema?.Name</td>
                <td>@(movie.StartDate.ToString("yyyy-MM-dd"))</td>
                <td>@(movie.Price.ToString("C"))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info me-1">Details</a>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this movie?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-searchString="@currentFilter" asp-route-categoryId="@currentCategory">Previous</a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@currentFilter" asp-route-categoryId="@currentCategory">@i</a>
            </li>
        }

        <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-searchString="@currentFilter" asp-route-categoryId="@currentCategory">Next</a>
        </li>
    </ul>
</nav>
