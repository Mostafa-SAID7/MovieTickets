@model MovieTickets.Helpers.PaginatedList<MovieTickets.Models.Movie>
@using System.Text.Encodings.Web

<div class="row g-3">
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info mb-0">No movies found.</div>
        </div>
    }
    else
    {
        foreach (var movie in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="card h-100 shadow-sm movie-card" data-movie-id="@movie.Id">
                    <div class="ratio ratio-16x9 overflow-hidden">
                        <img src="@(string.IsNullOrEmpty(movie.ImgUrl) ? Url.Content("~/images/placeholder-movie.png") : Url.Content(movie.ImgUrl))"
                             alt="@Html.Raw(HtmlEncoder.Default.Encode(movie.Title)) poster"
                             class="card-img-top object-fit-cover"
                             loading="lazy" />
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@movie.Title</h5>
                        <p class="card-text text-muted small mb-2">
                            @(movie.Cinema?.Name ?? "—") &nbsp;•&nbsp; @(movie.Category?.Name ?? "—")
                        </p>
                        <p class="card-text small text-truncate-2">@movie.Description</p>

                        <div class="mt-auto d-flex justify-content-between align-items-center pt-2">
                            <div>
                                <span class="fw-bold">@movie.Price.ToString("0.##")</span>
                                <small class="text-muted">EGP</small>
                            </div>
                            <div>
                                <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">Details</a>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        <span>From @movie.StartDate.ToString("yyyy-MM-dd")</span>
                        @if (movie.EndDate > movie.StartDate)
                        {
                            <span class="ms-2">• Until @movie.EndDate.ToString("yyyy-MM-dd")</span>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3" aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link js-page" href="#" data-page="@(Model.PageIndex - 1)" aria-label="Previous">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link js-page" href="#" data-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link js-page" href="#" data-page="@(Model.PageIndex + 1)" aria-label="Next">Next</a>
            </li>
        </ul>
    </nav>
}
