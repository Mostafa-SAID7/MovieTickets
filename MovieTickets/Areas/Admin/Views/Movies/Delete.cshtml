@model MovieTickets.Models.Movie
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Movie";
}


<h2 class="text-danger">Delete Confirmation</h2>
<h4>Are you sure you want to delete this movie?</h4>
<hr />

<div class="card shadow-sm border-danger mb-4">
    <div class="row g-0">
        <div class="col-md-3">
            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <img src="@Model.ImgUrl" alt="@Model.Title" class="img-fluid rounded-start" />
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <span class="text-muted">No Poster</span>
                </div>
            }
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    <strong>Category:</strong> @Model.Category?.Name <br />
                    <strong>Cinema:</strong> @Model.Cinema?.Name <br />
                    <strong>Price:</strong> $@Model.Price <br />
                    <strong>Start Date:</strong> @Model.StartDate.ToShortDateString() <br />
                    <strong>End Date:</strong> @Model.EndDate.ToShortDateString()
                </p>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>
